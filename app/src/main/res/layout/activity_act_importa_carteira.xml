<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.Activitys.ActImportaCarteira">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout10"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/blue500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/voltarImportar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/seta_volta_loja" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="16dp"
            android:text="Importar Carteira"
            android:textColor="@color/white"
            android:textFontWeight="600"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/voltarImportar"
            app:layout_constraintStart_toEndOf="@+id/voltarImportar"
            app:layout_constraintTop_toTopOf="@+id/voltarImportar" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView78"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="16dp"
        android:textSize="12sp"
        android:lineHeight="20dp"
        android:textColor="@color/gray800"
        android:letterSpacing="0.025"
        android:fontFamily="@font/roboto"
        android:text="Importe sua lista de CNPJs para serem exibidos na sua carteira. Serão importados e exibidos em sua carteira apenas CNPJs de farmácias e drogarias autorizadas."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout10" />
    <TextView
        android:id="@+id/baixarModelo"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:background="@drawable/bordas_8dp_gray300"
        android:backgroundTint="@color/info600"
        android:drawableEnd="@drawable/seta_baixar"
        android:fontFamily="@font/roboto"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:text="Modelo de Importação"

        android:textColor="@color/gray50"

        android:textFontWeight="500"
        app:layout_constraintEnd_toStartOf="@+id/contrainsVisualizaModelo"
        app:layout_constraintStart_toStartOf="@+id/textView78"
        app:layout_constraintTop_toBottomOf="@+id/textView78" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contrainsVisualizaModelo"
        android:layout_width="52dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bordas_8dp_gray300"
        android:backgroundTint="@color/gray300"

        app:layout_constraintBottom_toBottomOf="@+id/baixarModelo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/baixarModelo">

        <ImageView
            android:id="@+id/imageView21"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:tint="@color/gray600"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/visualiza" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView82"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Importar Carteira"
        android:textColor="@color/gray800"
        android:textFontWeight="500"
        android:textSize="14sp"
        android:fontFamily="@font/roboto"
        app:layout_constraintStart_toStartOf="@+id/baixarModelo"
        app:layout_constraintTop_toBottomOf="@+id/baixarModelo" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/improtarArquivo"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bordas_pontilhadas_opl_pagamento"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView82">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:background="@color/gray100"
            android:gravity="center"
            android:fontFamily="@font/roboto"
            android:textColor="@color/gray400"
            android:text="Selecionar arquivo para importação"
            android:layout_marginBottom="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView83"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto"
        android:textColor="@color/gray400"
        android:lineHeight="25dp"
        android:text="• Extensões permitidas: .txt, .xlsx, .xls, .csv \n
• Upload máximo 500 CNPJs"
        app:layout_constraintStart_toStartOf="@+id/improtarArquivo"
        app:layout_constraintTop_toBottomOf="@+id/improtarArquivo" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constrainCarregando"
        android:layout_width="match_parent"
        android:elevation="30dp"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#4A35393C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="38dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </ProgressBar>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>